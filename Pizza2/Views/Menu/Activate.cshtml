@model List<string>


<h2>Avalible Menus</h2>
<div class="my-3">
    <form asp-controller="Menu" asp-action="ActivateMenu" class="" method="post">
        <select class="form-select" asp-for="@Model[0]">
            @{
                if (Model.Any())
                {
                    foreach (var menu in Model)
                    {
                        <option value="@menu">@menu</option>
                    }
                }
                else
                {
                    <option value="_null_pizza_">-No menus avalible-</option>
                }
            }
        </select>

        <button type="submit" class="btn btn-primary my-2">Save</button>
    </form>
</div>

