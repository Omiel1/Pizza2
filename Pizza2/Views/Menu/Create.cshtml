@model List<PizzaViewModel>
<h1>Create new Menu variant</h1>

<div class="container">

    <div class="row">
        <form asp-controller="Menu" asp-action="CreateMenu" method="post">
            <table class="table table-striped table-dark">
                <tr>
                    <th scope="col"> <b>#Position In Menu#</b> </th>
                    <th scope="col"> <b>Pizza</b> </th>
                </tr>
                @{
                    for (int i = 0; i < Model.Count(); i++){
                        <tr>
                            <td>@i</td>
                            <td>
                                <select asp-for="@Model[i].Id">
                                    <option value="-1" selected>-----</option>
                                    @{
                                        for (int ii = 0; ii < Model.Count(); ii++){
                                            <option value="@Model[ii].Id">@Model[ii].PizzaName</option>
                                        }
                                    }
                                </select>
                            </td>
                        </tr>
                    }
                }
            </table>

            <label class="form-label mb-3">Menu name</label>
            <input type="text" asp-for="@Model[0].PizzaName" placeholder="Enter Menu name here" required/>

            <button type="submit" class="btn btn-primary">Save Menu</button>
        </form>
    </div>
</div>
