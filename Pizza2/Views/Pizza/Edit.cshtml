@model AddMultipleModel<PizzaViewModel, int>

<h2>Edit Ingridients</h2>

<div class="container my-2 text-center">
    <div class="row border border-dark">
        <div class="col border border-success p-0">
            <table class="table table-dark table-striped m-0">
                <tr>
                    <th scope="col"> <h4>#</h4> </th>
                    <th scope="col"> <h4>Name</h4> </th>
                    <th scope="col"> <h4>Price</h4> </th>
                    <th scope="col"> <h4>Confrim Change</h4> </th>
                </tr>
                @{
                    int count = 0;
                }
                @foreach(var pizza in Model.itemOneList){
                    <tr>
                        <td> @count </td>
                        <form asp-controller="Pizza" asp-action="EditPizza" method="post">
                            <td>
                                <input asp-for=@Model.itemOne.PizzaName type="text" value="@pizza.PizzaName">
                            </td>
                            <td>
                                <div class="row">
                                    <input asp-for=@Model.itemTwoList[0] type="number" value="@pizza.PizzaName">
                                    <span>.</span>
                                    <input asp-for=@Model.itemTwoList[1] type="number" value="@pizza.PizzaName">
                                </div>
                            </td>
                            <td>
                                <button type="submit" class="btn btn-danger">Change</button>
                            </td>
                        </form>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
