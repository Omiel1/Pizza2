@model UserViewModel

@{
    <h1>Create Ingridient</h1>

    <div class="row">
        <div class="col-6">
            <form asp-controller="User" asp-action="CreateUser" method="post">

                <div>
                    <label class="form-label mb-3">Username(Station name)</label>
                    <input asp-for=UserName type="text" class="form-control" />
                </div>

                <div>
                    <label class="form-label mb-3">Password</label>
                    <input asp-for=Password type="password" class="form-control" />
                </div>

                <div>
                    <label class="form-label mb-3">Privilages(0 - Table, 1 - Worker)</label>
                    <input asp-for=Privilages type="range" min="0" max="1" class="form-range" />
                </div>

                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
    </div>
}
