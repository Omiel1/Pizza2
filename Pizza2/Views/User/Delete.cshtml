@model List<UserViewModel>

<h2>List of Users</h2>
<div>
    <table class="table table-striped table-dark">
        <tr>
            <th scope="col"> <h4>#</h4> </th>
            <th scope="col"> <h4>ID</h4> </th>
            <th scope="col"> <h4>Name</h4> </th>
            <th scope="col"> <h4>Category</h4> </th>
            <th scope="col"> <h4 class="text-danger"> <b>Delete</b> </h4> </th>
        </tr>
    @{
        int count = 0;
        foreach(var item in Model)
            {
                <tr>
                    <th scope="row">@count</th>
                    <td>@item.Id</td>
                    <td>@item.UserName</td>
                    <td>
                        @if(item.Privilages == 0){
                            <span> Table Station </span>
                        } else {
                            <span> Worker Station </span>
                        }
                    </td>
                    <td>
                        <form asp-controller="User" asp-action="DeleteUser" method="post">
                            <input asp-for=@Model[0].Id type="number" value=@item.Id hidden />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
                count++;
            }
        }
    </table>
</div>



